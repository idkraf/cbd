<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="org.tensorflow.lite.examples.imageclassification.fragments.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_main_fragment_to_camera_fragment"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/main_fragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_main_fragment_to_artikelFragment"
            app:destination="@id/artikelFragment"
            app:popUpTo="@id/main_fragment"
            app:popUpToInclusive="true" />

    </fragment>
    <fragment
        android:id="@+id/permissions_fragment"
        android:name="org.tensorflow.lite.examples.imageclassification.fragments.PermissionsFragment"
        android:label="PermissionsFragment">

        <action
            android:id="@+id/action_permissions_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/camera_fragment"
        android:name="org.tensorflow.lite.examples.imageclassification.fragments.CameraFragment"
        android:label="CameraFragment">

        <action
            android:id="@+id/action_camera_to_permissions"
            app:destination="@id/permissions_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/artikelFragment"
        android:name="org.tensorflow.lite.examples.imageclassification.fragments.ArtikelFragment"
        android:label="ArtikelFragment" />
</navigation>

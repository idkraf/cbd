<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="org.tensorflow.lite.examples.imageclassification.fragments.MainFragment"
        android:label="MainFragment" >

        <action
            android:id="@+id/action_main_fragment_to_permissions_fragment"
            app:destination="@id/permissions_fragment" />
        <action
            android:id="@+id/action_main_fragment_to_permissionsGaleriFragment"
            app:destination="@id/permissions_galeri" />

    </fragment>
    <fragment
        android:id="@+id/permissions_fragment"
        android:name="org.tensorflow.lite.examples.imageclassification.fragments.PermissionsFragment"
        android:label="PermissionsFragment">

        <action
            android:id="@+id/action_permissions_to_camera"
            app:destination="@id/camera_fragment"
            app:popUpTo="@id/permissions_fragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/camera_fragment"
        android:name="org.tensorflow.lite.examples.imageclassification.fragments.CameraFragment"
        android:label="CameraFragment">

        <action
            android:id="@+id/action_camera_to_permissions"
            app:destination="@id/permissions_fragment"
            app:popUpTo="@id/camera_fragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_camera_to_main"
            app:destination="@id/main_fragment" />
    </fragment>

    <fragment
        android:id="@+id/permissions_galeri"
        android:name="org.tensorflow.lite.examples.imageclassification.fragments.PermissionsGaleriFragment"
        android:label="PermissionsGaleriFragment" >
        <action
            android:id="@+id/permissions_to_galeri"
            app:destination="@id/galeri_fragment"
            app:popUpTo="@id/permissions_galeri"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/galeri_fragment"
        android:name="org.tensorflow.lite.examples.imageclassification.fragments.GaleriFragment"
        android:label="GaleriFragment" >
        <action
            android:id="@+id/galeri_to_permissions"
            app:destination="@id/permissions_galeri"
            app:popUpTo="@id/galeri_fragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_galeri_to_main"
            app:destination="@id/main_fragment" />
    </fragment>
</navigation>
